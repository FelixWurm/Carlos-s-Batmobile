
\ProvidesPackage{beamerthemeUOSSYSPoster} 



\mode<presentation>


\def\footerline{\setbeamertemplate{footerline}}
\def\insertfooterline{\usebeamertemplate*{footerline}}

\def\morelogos{\setbeamertemplate{morelogos}}
\def\insertmorelogos{\usebeamertemplate*{morelogos}}


\definecolor{uosgrey}{RGB}{207,208,209}
%\definecolor{uosred}{RGB}{171, 16, 55}
\definecolor{uosred}{RGB}{172, 6, 52}


\setbeamercolor*{redbox}{bg=uosred}
\setbeamercolor*{whitebox}{bg=white}




\setbeamercolor{block title}{use=structure,fg=white,bg=uosred}


\setbeamercolor{block body}{parent=normal text,use=block title,bg=uosgrey}

\setbeamercolor{itemize item}{fg=uosred}
\setbeamercolor{itemize subitem}{fg=uosred}
\setbeamercolor{itemize subsubitem}{fg=uosred}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{subsection in toc}{fg=black,bg=white}

\setbeamercolor{structure}{fg=black}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster
\setbeamertemplate{items}[square]

\setbeamertemplate{bibliography item}[text]




\setbeamercolor{headline}{fg=black, bg=uosgrey}



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=false,colsep*=.75ex,sep=.75ex,vmode,]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode
\hbox{%
	\begin{beamercolorbox}[wd=0.3333\paperwidth,ht=77mm,center]{redbox}
	\vbox to77mm{\vfil\hbox{\includegraphics[width=0.29\paperwidth]{logos/uos_webstyle}}\vfil}%
	\end{beamercolorbox} 
	\begin{beamercolorbox}[wd=0.66666\paperwidth,ht=77mm]{headline}
	\vbox to77mm{\vfil\hbox{\hspace{28cm}\qquad\includegraphics[height=40mm]{logos/sys}\insertmorelogos}\vfil}%
	\end{beamercolorbox} 
} %hbox

	\begin{beamercolorbox}[wd=\paperwidth]{whitebox}
	\vskip12ex
	    %\raggedleft
	    \centering
	    \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
	    \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
	\end{beamercolorbox} 

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

%}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \leavevmode%
    \hbox{%
    	\begin{beamercolorbox}[wd=0.66666\paperwidth]{whitebox}
    	  \end{beamercolorbox} 
    	\begin{beamercolorbox}[wd=0.33333\paperwidth]{whitebox}
    	  	\LARGE{\insertfooterline}
    	  \end{beamercolorbox} 
    } %hbox
  
  \hbox{%
  	\begin{beamercolorbox}[wd=0.66666\paperwidth,ht=12mm,center]{headline}
  	\end{beamercolorbox} 
  	\begin{beamercolorbox}[wd=0.33333\paperwidth,ht=12mm]{redbox}
  	\end{beamercolorbox} 
  } %hbox

}


\mode<all>

